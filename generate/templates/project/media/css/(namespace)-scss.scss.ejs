/*
 * Sprites
 **********************************************************/

$sprite: url('/put/your/sprite/here.png');

/*
 * Colors
 **********************************************************/

$color-corporate: #e00;
$color-default: #555;

$color-white: #fff;
$color-black: #000;
$color-grey-light: #ccc;

$color-blue: #59d;
$color-blue-dark: #26a;

$color-red: #f44;
$color-red-dark: #c11;

$color-green: #6b3;
$color-green-dark: #380;

$color-yellow: #ff6;
$color-yellow-dark: #fc0;

/*
 * Fonts
 **********************************************************/

$font-family-primary: 'Roboto', sans-serif;
$font-family-secondary: 'Roboto Condensed', sans-serif;
$font-weight-normal: 400;
$font-weight-semibold: 500;
$font-weight-bold: 700;

/*
 * CSS Details
 **********************************************************/

$css-radius: 5px;

/*
 * Mixins
 **********************************************************/

@mixin <%= namespace %>-truncate() {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/*
 * Prefix Mixins
 **********************************************************/

@mixin <%= namespace %>-box-sizing {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

@mixin <%= namespace %>-appearance {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
}

@mixin <%= namespace %>-user-select {
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

@mixin <%= namespace %>-gradient($bg1, $bg2) {
    background: $bg1;
    background: -webkit-linear-gradient(top, $bg1 0%, $bg2 100%);
    background:    -moz-linear-gradient(top, $bg1 0%, $bg2 100%);
    background:      -o-linear-gradient(top, $bg1 0%, $bg2 100%);
    background:   linear-gradient(to bottom, $bg1 0%, $bg2 100%);
}

@mixin <%= namespace %>-transition($transition: all 0.3s linear) {
    -webkit-transition: $transition;
    -moz-transition: $transition;
    -o-transition: $transition;
    transition: $transition;
}

@mixin <%= namespace %>-transition-double($transition1, $transition2) {
    -webkit-transition: $transition1, $transition2;
    -moz-transition: $transition1, $transition2;
    -o-transition: $transition1, $transition2;
    transition: $transition1, $transition2;
}

@mixin <%= namespace %>-transform($transform) {
    -webkit-transform: $transform;
    -moz-transform: $transform;
    -ms-transform: $transform;
    -o-transform: $transform;
    transform: $transform;
}

@mixin <%= namespace %>-animation($animation) {
    -webkit-animation: $animation;
    -moz-animation: $animation;
    animation: $animation;
}

@mixin <%= namespace %>-opacity($opacity: 0.5) {
    $opperc: $opacity * 100;
    filter: "alpha(opacity=${opperc})"; /* IE 7 */
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(opacity=${opperc})"; /* IE 8 */
    opacity: $opacity;
}