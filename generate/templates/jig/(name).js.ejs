steal('core/control',
    '<%= namespace %>/media/css/<%= namespace %>-core.scss'
).then(
    './css/<%= name %>.scss',
    function () {
    "use strict";

    /**
     * @class <%= name %>
     */
    can.Control.extend('<%= Namespace %>.Jig.<%= Name %>',
    /** @Static */
        {
            defaults : {
                template: "//<%= namespace %>/jig/<%= name %>/views/init.mustache"
            }
        },
        /** @Prototype */
        {
            init : function () {
                var self = this;
                self.element.html(can.view(self.options.template, self.options));
            }
        });
});
